{
  "name": "Semantic Scholar â€” paste DOI into search box",
  "targetUrl": "https://www.semanticscholar.org/",

  "input": {
    "selector": "input[type='text'], input[type='search'], input[name='q']"
  },

  "submit": {
    "press": "Enter"
  },

  "postSubmitSteps": [
    {
      "description": "Click the 'Journal Articles' tab",
      "selectors": "a:has-text('Journal Articles'), button:has-text('Journal Articles')",
      "timeoutMs": 10000
    },
    {
      "description": "Click the first result link",
      "selectors": "a[data-test-id='paper-link'], .cl-paper-title a, h3 a, .result-title a",
      "timeoutMs": 10000
    }
  ],

  "result": {
    "waitForAny": [
      "a:has-text('PDF')",
      "a:has-text('View PDF')",
      "[data-test-id='paper-link']"
    ],
    "timeoutMs": 15000
  },

  "download": {
    "clickFirstMatching": [
      "a:has-text('PDF')",
      "a:has-text('View PDF')",
      "button:has-text('Open')",
      "a:has-text('Open')"
    ],
    "timeoutMs": 60000
  }
}
